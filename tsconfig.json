{
  "compilerOptions": {
    "target": "ES2020", // Modern JavaScript
    "module": "ESNext",  // For modern module systems
    "jsx": "react-jsx",  // Modern JSX transform
    "outDir": "./docs",    // << IMPORTANT: Output directory for compiled JS
    "rootDir": "./",     // Root of your source files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler" // Or "node" if you have issues
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules", // If you had any
    "dist"          // Exclude the output directory itself
  ]
}